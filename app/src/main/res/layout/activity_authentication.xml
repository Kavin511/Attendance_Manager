<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="authenticationViewModel"
            type="com.devstudio.check_in.viewModels.AuthenticationViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/auth_background"
        android:gravity="center"
        tools:context=".ui.authentication.AuthenticationActivity">
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="fixed"
            android:background="@drawable/bottom_sheet_background"
            android:backgroundTint="@color/white"
            app:background="@drawable/tab_background"
            app:tabIndicatorColor="@color/colorPrimary"
            app:tabUnboundedRipple="false"
            app:tabTextAppearance="@style/TextAppearanceTab"
            />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:layout_below="@+id/tabLayout"
            />

    </RelativeLayout>
</layout>