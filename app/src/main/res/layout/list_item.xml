<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation=".5dp"
    android:layout_margin="2dp"
    android:background="@drawable/item_background">
    <TextView
        android:id="@+id/options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:padding="15dp"
        android:text="&#8942;"
        android:textAppearance="?android:textAppearanceLarge" />    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/labourName"
        android:layout_margin="2.5dp"
        android:drawableStart="@drawable/ic_person"
        android:drawablePadding="5dp"
        android:padding="5dp"
        android:textSize="14sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/labourSalary"
        android:layout_margin="2.5dp"
        android:drawableStart="@drawable/ic_salary"
        android:drawablePadding="5dp"
        android:padding="5dp"
        android:layout_below="@id/labourName"
        android:textSize="14sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/startingTime"
        android:layout_margin="2.5dp"
        android:drawableStart="@drawable/ic_starting_time"
        android:drawablePadding="5dp"
        android:padding="5dp"
        android:layout_below="@id/labourSalary"
        android:textSize="14sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/endingTime"
        android:layout_margin="2.5dp"
        android:drawableStart="@drawable/ic_ending_time"
        android:drawablePadding="5dp"
        android:padding="5dp"
        android:layout_below="@+id/startingTime"
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/overtTimeCheckBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2.5dp"
        android:drawableStart="@drawable/ic_check_box"
        android:drawableTint="@color/green"
        android:drawablePadding="5dp"
        android:padding="5dp"
        android:layout_below="@+id/endingTime"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/overtTimeCheckBox"
        android:layout_margin="2.5dp"
        android:drawablePadding="5dp"
        android:padding="5dp"
        android:textSize="14sp" />

</RelativeLayout>